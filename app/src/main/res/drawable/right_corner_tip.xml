<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="10%"
            android:pivotY="-45%"
            android:toDegrees="44">

            <shape android:shape="rectangle">
                <solid android:color="@color/right_chat_row"></solid>

                <stroke
                    android:width="0dp"
                    android:color="@color/right_chat_row" />
            </shape>
        </rotate>
    </item>

</layer-list>